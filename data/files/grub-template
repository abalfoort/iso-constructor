insmod png
insmod font
if loadfont [BOOTFONT]; then
    set gfxmode=auto
    set gfxpayload=keep
    insmod efi_gop
    insmod efi_uga
    insmod video_bochs
    insmod video_cirrus
    insmod gfxterm
    terminal_output gfxterm

    if background_image /isolinux/splash.png; then
        set color_normal=light-gray/black
        set color_highlight=white/black
    else
        set menu_color_normal=light-gray/black
        set menu_color_highlight=white/black
    fi
    
    [THEME]

fi

# Set variables
set timeout=10
set default=0

if [ ${iso_path} ] ; then
    set loopback="findiso=${iso_path}"
fi

[MENU]

[LOCALES]

[DEBINSTALLER]

submenu "Advanced options" {
    menuentry "Start [TITLE] (safe)" {
        linux   [VMLINUZ] boot=live components memtest noapic noapm nodma nomce nolapic nomodeset nosmp nosplash vga=normal
        initrd  [INITRD]
    }
    
    [MENUPLUS]
    
    menuentry "Check the integrity of the medium" --hotkey=c {
        linux   [VMLINUZ]  boot=live verify-checksums
        initrd  [INITRD]
    }
    menuentry "Boot from disk" --hotkey=d {
        set root=(hd1)
        chainloader +1
    }
    menuentry "System restart" --hotkey=r {
        reboot
    }
    menuentry "System shutdown" --hotkey=s {
        halt
    }
}
